<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:maxHeight="30dp"
              android:orientation="horizontal"
              android:id="@+id/dateHeaderLayout">
    <ImageView android:id="@+id/need_icon"
               android:src="@drawable/checked"
               android:layout_marginLeft="2dp"
               android:layout_marginRight="2dp"
               android:layout_height="30dp"
               android:layout_marginTop="6dp"
               android:onClick="needclick"
               android:layout_width="30dp">
    </ImageView>
    <TextView android:text="@+id/tv_quantity"
              android:layout_height="wrap_content"
              android:id="@+id/quantity"
              android:textStyle="bold"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:maxHeight="30dp"
              android:clickable="true"
              android:textSize="20dp"
              android:layout_marginTop="6px"
              android:layout_width="50dp"
              android:layout_weight="2"
              android:textColor="@color/font">
    </TextView>
    <TextView android:text="Need"
              android:layout_height="wrap_content"
              android:id="@+id/lblNeed"
              android:textStyle="bold"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:maxHeight="30dp"
              android:textSize="20dp"
              android:layout_marginTop="6px"
              android:layout_width="0dp"
              android:layout_weight="0"
              android:clickable="false"
              android:visible="false"
              android:textColor="@color/font">
    </TextView>
    <TextView android:text="Item"
              android:textStyle="bold"
              android:layout_height="wrap_content"
              android:id="@+id/lblItem"
              android:maxHeight="30dp"
              android:textSize="20dp"
              android:clickable="true"
              android:layout_marginTop="6px"
              android:layout_width="400dp"
              android:layout_weight="1"
              android:textColor="@color/font">
    </TextView>
    <TextView android:text="Date"
              android:textSize="15dp"
              android:textStyle="bold"
              android:layout_marginTop="1px"
              android:clickable="true"
              android:textColor="@color/font"
              android:layout_width="150dp"
              android:id="@+id/lblDate"
              android:maxHeight="30dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:longClickable="true"
              android:onClick="dateclick">
    </TextView>
    <TextView android:text="Note"
              android:textStyle="bold"
              android:textSize="15dp"
              android:layout_marginTop="1px"
              android:clickable="true"
              android:textColor="@color/font"
              android:layout_width="150dp"
              android:id="@+id/lblNote"
              android:maxHeight="30dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:visibility="gone">

    </TextView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:maxHeight="30dp"
                  android:orientation="horizontal"
                  android:visibility="invisible">
        <TextView android:text="Category"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"
                  android:id="@+id/lblCat"
                  android:maxHeight="30dp"
                  android:clickable="true"
                  android:textSize="20dp"
                  android:layout_marginTop="6px"
                  android:layout_width="100dp"
                  android:layout_weight="1"
                  android:textColor="@color/font">
        </TextView>
        <TextView android:text="TextView"
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:textSize="10dp"
                  android:id="@+id/lblAisle"
                  android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>
