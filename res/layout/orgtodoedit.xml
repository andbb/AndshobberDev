<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="@color/listcolor">


    <Spinner android:id="@+id/category" android:layout_width="wrap_content"
             android:layout_height="wrap_content" android:entries="@array/categories"></Spinner>
    <LinearLayout android:id="@+id/LinearLayout01"
                  android:layout_height="wrap_content" android:layout_width="fill_parent">
        <EditText android:layout_height="wrap_content" android:id="@+id/item_edit"
                  android:layout_weight="1" android:layout_width="wrap_content"
                  android:hint="Summary"></EditText>

    </LinearLayout>


    <EditText android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:layout_weight="1"
              android:id="@+id/note_edit" android:hint="Description" android:gravity="top"></EditText>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/item_edit_button"
            android:text="@string/item_edit_confirm"></Button>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/todo_fill_button"
            android:text="@string/todo_edit_fill"></Button>


</LinearLayout>
